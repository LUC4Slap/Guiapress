<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
<div class="container">
    <hr>
    <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="ard-body">
                <a href="/<%= article.slug %>" class="btn btn-primary m-2">Ler artigo</a>
            </div>
        </div>
        <br>
    <% }) %>
    <div class="row">
        <div class="col col-12">
            <% if(result.page > 1 && result.page > 0){ %>
                <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"><<< Prev</a>
            <% } %>
            <% if(result.next){ %>
                <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next >>></a>
            <% } %>
        </div>
    </div>
    <hr>
</div>
<%- include('../../partials/footer.ejs') %>