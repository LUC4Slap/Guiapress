<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h3>Criação de usuário</h3>
        </div>
        <div class="card-body">
            <form action="/users/update" method="POST">
                <input type="hidden" name="id" value="<%= user.id %>">
                <!-- <label for="email">E-mail: </label> -->
                <input type="email" value="<%= user.email %>" name="email" id="email" class="form-control" placeholder="email@exemplo.com"><br>
                <!-- <label for="password">Senha: </label> -->
                <input type="password" value="<%= user.password %>" name="password" id="password" class="form-control" placeholder="******">
                <button type="submit" class="btn btn-primary btn-block mt-2">Criar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>